<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="true"
    android:gravity="center"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/vip_dialog"
        android:layout_width="320dp"
        android:layout_height="300dp">

        <ImageView
            android:id="@+id/left_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="3dp"
            android:layout_marginTop="135dp"
             />

        <ImageView
            android:id="@+id/right_middle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="175dp"
             />


        <LinearLayout
            android:id="@+id/vip_rights_desc_container"
            android:layout_width="291dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="21dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/bg_show_vip_to_reward"
            android:elevation="2dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vip_rights_content"
                android:layout_width="291dp"
                android:layout_height="108dp"
                android:layout_marginRight="12dp"
                android:background="@drawable/bg_show_vip_to_reward_top"
                android:gravity="center"
                android:text="@string/toast_deny_add3"
                android:textColor="#5A491E"
                android:textSize="16sp" />

            <androidx.recyclerview.widget.RecyclerView
                android:layout_marginTop="20dp"
                android:id="@+id/rv_vip_rights_item"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager">

            </androidx.recyclerview.widget.RecyclerView>

            <LinearLayout
                android:id="@+id/vip_rights_dialog_button_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="21dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="13dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@+id/left_button_and_superscript_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/left_button_container"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/dialog_bt_left_selector"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/left_button_function_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:text="@string/time_limit_to_pay"
                            android:textColor="#555555"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/left_button_superscript"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/dialog_pay_sign_bg"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="@string/dialog_show_vip_left_sign_text"
                        android:textColor="@color/dialog_button_right_text_color"
                        android:textSize="12sp" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/right_button_and_superscript_container"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <LinearLayout
                        android:id="@+id/right_button_container"
                        android:layout_width="match_parent"
                        android:layout_height="32dp"
                        android:layout_marginLeft="6dp"
                        android:layout_marginTop="9dp"
                        android:layout_marginRight="6dp"
                        android:background="@drawable/dialog_bt_right_selector_gold"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/right_button_function_desc"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:lines="1"
                            android:text="@string/free_trial_3_day"
                            android:textColor="#5A491E"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/right_button_superscript"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:background="@drawable/dialog_pay_sign_bg"
                        android:paddingLeft="8dp"
                        android:paddingRight="8dp"
                        android:text="@string/dialog_show_vip_left_sign_text"
                        android:textColor="@color/dialog_button_right_text_color"
                        android:textSize="12sp"
                        android:visibility="gone" />
                </RelativeLayout>
            </LinearLayout>
        </LinearLayout>

        <ImageView
            android:id="@+id/upper_left_corner"
            android:layout_width="82dp"
            android:layout_height="67dp"
            android:elevation="2dp" />

        <ImageView
            android:id="@+id/lower_left_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="250dp"
            android:elevation="2dp" />

        <ImageView
            android:id="@+id/lower_right_corner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="270dp"
            android:layout_marginRight="3dp"
            android:elevation="2dp" />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginTop="34dp"
            android:layout_marginRight="25dp"
            android:padding="5dp"
            android:src="@drawable/close_black" />
    </RelativeLayout>

</LinearLayout>